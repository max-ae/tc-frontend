---
const { name, title, subtitle, img } = Astro.props;
---

<div class="flex flex-col items-center flex-1 space-y-2 p-1 pb-4 basis-1/4">
    <img
        src={img}
        class="flex flex-grow min-w-20 min-h-20 max-w-40 max-h-40 aspect-square items-center justify-center rounded-full border-2 border-gray-300"
    />
    <div class="text-center">
        <h3 class="text-lg font-semibold">{name}</h3>
        <p class="text-gray-500">{title}</p>
        <i class="text-gray-500">{subtitle}</i>
    </div>
</div>
